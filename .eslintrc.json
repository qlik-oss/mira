{
    "extends": "airbnb-base",
    "rules": {
        "no-console":"error",
        "comma-dangle": ["error", "never"],
        "max-len":"off",
        "guard-for-in": "off"
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "globals": {
        "expect": true,
        "sinon": true,
        "chai": true
    }
}
